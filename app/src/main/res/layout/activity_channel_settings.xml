<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:fillViewport="true"
    android:layout_height="match_parent"
    tools:context="gps.tracker.com.gpstracker.Channel_settings"
    android:fadeScrollbars="false"
    >

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:layout_gravity="center_horizontal"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Channel :-"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:textColor="#ff0000"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

            />

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/box"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/aowner"
                android:hint="OWNER"
                android:textColorHint="#B3B6B7"
                android:textCursorDrawable="@null"
                android:textColor="#3F51B5"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:digits="0123456789qwertzuiopasdfghjklyxcvbnm "
                />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/pic"
                android:layout_gravity="center"
                android:src="@drawable/default_photo"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Browse for picture ..."
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:id="@+id/browse"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="#ffffff"

                />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/avname"
                android:inputType="textCapSentences"
                android:hint="VEHICLE NAME"
                android:textCursorDrawable="@null"
                android:textColor="#3F51B5"
                android:textColorHint="#B3B6B7"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:digits="0123456789qwertzuiopasdfghjklyxcvbnm"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VEHICLE TYPE"
                android:textSize="18sp"
                android:textStyle="normal"
                android:gravity="left"
                android:id="@+id/vtype"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:textColor="#ffffff"
                android:drawableRight="@drawable/drop_down"

                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CATEGORY"
                android:textSize="18sp"
                android:textStyle="normal"
                android:gravity="left"
                android:id="@+id/acategory"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:textColor="#ffffff"
                android:drawableRight="@drawable/drop_down"
                />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/avnumber"
                android:inputType="text"
                android:hint="VEHICLE NUMBER"
                android:textColorHint="#B3B6B7"
                android:textCursorDrawable="@null"
                android:textColor="#3F51B5"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:digits="0123456789qwertzuiopasdfghjklyxcvbnm"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/acity"
                android:inputType="textCapSentences"
                android:hint="CITY"
                android:textCursorDrawable="@null"
                android:textColor="#3F51B5"
                android:textColorHint="#B3B6B7"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:digits="qwertzuiopasdfghjklyxcvbnm"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TRAVEL TYPE"
                android:textSize="18sp"
                android:textStyle="normal"
                android:gravity="left"
                android:id="@+id/atravel"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:textColor="#ffffff"
                android:drawableRight="@drawable/drop_down"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="REFRESH RATE"
                android:textSize="18sp"
                android:textStyle="normal"
                android:gravity="left"
                android:id="@+id/arefresh"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:textColor="#ffffff"
                android:drawableRight="@drawable/drop_down"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Default follower setting"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"/>

            <RadioGroup
                android:id="@+id/rg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/rblock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Block"
                     />

                <RadioButton
                    android:id="@+id/rallow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Allow" />

            </RadioGroup>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SAVE"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:id="@+id/edit"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="#ffffff"

                />
        </LinearLayout>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Followers"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="left"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            />

        <ListView
            android:id="@+id/list"
            android:layout_height="500dp"
            android:layout_width="match_parent"
            android:paddingLeft="5dp"
            android:divider="#ff0000"
            android:dividerHeight="1px"
            android:background="@drawable/box">
        </ListView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:gravity="left"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="3dp"
            />


 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical"
     android:gravity="center"
     android:paddingLeft="10dp"
     android:paddingRight="10dp"
     android:paddingTop="10dp"
     android:paddingBottom="10dp"
     android:background="@drawable/box"
     android:layout_marginBottom="10dp"
     android:layout_marginTop="1dp">

     <Button
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="Delete Channel"
         android:textSize="20sp"
         android:textColor="#ff0000"
         android:textStyle="bold"
         android:background="@drawable/yellow_box"
         android:paddingLeft="10dp"
         android:paddingRight="10dp"
         android:layout_marginBottom="4dp"
         android:layout_marginTop="10dp"
         android:id="@+id/delete"/>

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Channel will be deleted only after all users have been blocked"
         android:textSize="12sp"
         android:textColor="#ff0000"
         android:layout_marginBottom="10dp"
         />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="*Change Mobile : "
        android:gravity="left"
        android:textSize="20sp"
        android:textColor="#ff0000"
       />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="New Mobile Number"
        android:inputType="number"
        android:id="@+id/newno"
        android:textSize="20sp"
        android:textColor="#ff0000"
        android:digits="0123456789"
        />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="DOB of User to verify"
            android:id="@+id/dob"
            android:textSize="20sp"
            android:textColor="#ffffff"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Mobile"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:background="@drawable/yellow_box"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="2dp"
            android:id="@+id/change"
            />

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="*This will transfer Channel to new mobile"
         android:textSize="12sp"
         android:textColor="#ff0000"
         />



 </LinearLayout>
    </LinearLayout>




</ScrollView>
