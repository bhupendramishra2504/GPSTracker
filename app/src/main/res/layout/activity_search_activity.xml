<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="gps.tracker.com.gpstracker.Search_activity">

    <ProgressBar

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:progressDrawable="@drawable/circular_progress_bar"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search Type"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="normal"
        android:id="@+id/stype"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#ffffff"
        android:background="@drawable/allborder"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/search_string"
        android:inputType="text"
        android:hint="name,vehicle name,number,city..."
        android:textColorHint="#B3B6B7"
        android:textCursorDrawable="@null"
        android:layout_marginTop="5dp"
        android:textColor="#3353e0"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:imeOptions="actionDone"
        android:singleLine="true"

        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search your city"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="normal"
        android:id="@+id/search"
        android:textColor="#ffffff"
        android:background="@drawable/allborder"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/desc"
        android:textColor="#3353e0"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
    <ListView
        android:id="@+id/search_list"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:dividerHeight="1px"
        android:divider="#bbbbbb"
        android:background="#11ffffaa"
        android:cacheColorHint="#11ffffaa"

        >
    </ListView>

</LinearLayout>
