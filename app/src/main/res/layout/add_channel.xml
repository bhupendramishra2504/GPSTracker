<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llShow"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Logged as : "
                    android:id="@+id/logged_user"
                    android:gravity="center"
                    android:textColor="#3353e0"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="30dp"
                    />

               <!-- <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@mipmap/ic_add_channel"
                    android:id="@+id/pic"/> -->
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/pic"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@mipmap/ic_add_channel"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#00000000"
                    />


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardCornerRadius="1dp"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="true">

                    <Button
                        android:id="@+id/browse"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Browse"
                        android:textColor="@color/colorAccent"
                        android:textAllCaps="false"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:onClick="onClick"
                        android:background="@null"
                        />

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardCornerRadius="1dp"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="true">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:inputType="text"
                        android:id="@+id/avnumber"
                        android:hint="@string/hint_vehicle_number"
                        android:textSize="18dp"
                        android:textColor="@color/colorAccent"
                        android:textColorHint="@color/colorAccent"
                        android:padding="8dp"
                        android:background="@null"/>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardCornerRadius="1dp"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="true">

                    <Button
                        android:id="@+id/vtype"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="vehicle type"
                        android:textColor="@color/colorAccent"
                        android:textAllCaps="false"
                        android:textSize="18dp"
                        android:clickable="true"
                        android:drawableRight="@mipmap/ic_spinner_down_arrow"
                        android:gravity="center_vertical"
                        android:background="@null"
                        android:padding="8dp"
                        />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardCornerRadius="1dp"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="true">

                    <Button
                        android:id="@+id/acategory"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Category"
                        android:textColor="@color/colorAccent"
                        android:textAllCaps="false"
                        android:textSize="18dp"
                        android:clickable="true"
                        android:onClick="onClick"
                        android:drawableRight="@mipmap/ic_spinner_down_arrow"
                        android:gravity="center_vertical"
                        android:background="@null"
                        android:padding="8dp"
                        />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardCornerRadius="1dp"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="true">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:inputType="text"
                        android:hint="@string/owner"
                        android:id="@+id/aowner"
                        android:textSize="18dp"
                        android:textColor="@color/colorAccent"
                        android:textColorHint="@color/colorAccent"
                        android:padding="8dp"
                        android:background="@null"/>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardCornerRadius="1dp"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="true">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:inputType="text"
                        android:hint="Vehicle Name"
                        android:id="@+id/avname"
                        android:textSize="18dp"
                        android:textColor="@color/colorAccent"
                        android:textColorHint="@color/colorAccent"
                        android:padding="8dp"
                        android:background="@null"/>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardCornerRadius="1dp"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="true">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:inputType="text"
                        android:id="@+id/acity"
                        android:hint="@string/city_hint"
                        android:textSize="18dp"
                        android:textColor="@color/colorAccent"
                        android:textColorHint="@color/colorAccent"
                        android:padding="8dp"
                        android:background="@null"/>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardCornerRadius="1dp"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="true">

                    <Button
                        android:id="@+id/atravel"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Travel type"
                        android:textColor="@color/colorAccent"
                        android:textAllCaps="false"
                        android:textSize="18dp"
                        android:clickable="true"
                        android:onClick="onClick"
                        android:drawableRight="@mipmap/ic_spinner_down_arrow"
                        android:gravity="center_vertical"
                        android:background="@null"
                        android:padding="8dp"
                        />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardCornerRadius="1dp"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="true">

                    <Button
                        android:id="@+id/arefresh"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Refresh Rate"
                        android:textColor="@color/colorAccent"
                        android:textAllCaps="false"
                        android:textSize="18dp"
                        android:clickable="true"
                        android:onClick="onClick"
                        android:drawableRight="@mipmap/ic_spinner_down_arrow"
                        android:gravity="center_vertical"
                        android:background="@null"
                        android:padding="8dp"
                        />

                </android.support.v7.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Default follower setting"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorAccent"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"/>

                <RadioGroup
                    android:id="@+id/rg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rblock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Block"
                        android:checked="true" />

                    <RadioButton
                        android:id="@+id/rallow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Allow" />

                </RadioGroup>

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardCornerRadius="1dp"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="true">

                    <Button
                        android:id="@+id/rregister"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="@string/btn_add_channel"
                        android:textColor="@color/white"
                        android:textAllCaps="false"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:onClick="onClick"
                        android:background="@color/colorAccent"/>

                </android.support.v7.widget.CardView>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>