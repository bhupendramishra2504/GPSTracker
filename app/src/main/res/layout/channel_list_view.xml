<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:descendantFocusability="blocksDescendants"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp">

        <TextView android:id="@+id/cname"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            />

        <TextView android:id="@+id/cvname"
            android:textColor="#3f3f3f"
            android:textSize="15sp"
            android:layout_below="@+id/cname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            />

        <TextView android:id="@+id/cvnumber"
            android:textSize="15sp"
            android:textColor="#3f3f3f"
            android:layout_below="@+id/cvname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            />

        <TextView android:id="@+id/ctype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#3f3f3f"
            android:layout_below="@+id/cvnumber"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"/>

        <TextView android:id="@+id/ccategary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ctype"
            android:textColor="#3f3f3f"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:paddingBottom="10dp"

            />






    </RelativeLayout>









    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/pic"
            android:layout_alignParentTop="true"
            android:src="@drawable/default_photo"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>



        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"

            android:layout_below="@+id/pic"
            android:id="@+id/bross"
            android:paddingRight="20dp"
            android:paddingLeft="80dp"
            android:background="@android:color/transparent"
            android:src="@drawable/broadcast_icon"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
           />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/bross"
            android:id="@+id/visible"
            android:paddingRight="20dp"
            android:paddingLeft="80dp"
            android:layout_alignParentBottom="true"
            android:background="@android:color/transparent"
            android:src="@drawable/visible"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />


    </RelativeLayout>

</LinearLayout>