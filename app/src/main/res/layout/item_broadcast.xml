<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="@dimen/activity_horizontal_margin">

    <FrameLayout

        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingRight="10sp"
        android:paddingTop="10sp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_broadcast_civ_car"
            android:layout_width="60sp"
            android:layout_height="60sp"


            />
        <!--android:src="@drawable/ic_car"
        android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/ic_maps_directions_car"
            app:civ_border_color="#0288d1"
            app:civ_border_overlay="true"
            app:civ_border_width="1sp"
            android:tint="#0288d1"
        android:src="@mipmap/ic_car_white"-->

        <ImageView
            android:id="@+id/item_broadcast_iv_status"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_gravity="right"
            android:layout_marginTop="42sp"
            android:background="@drawable/half_circle"
            android:padding="2.5sp"
            />
        <!--android:src="@drawable/ic_tick"
        android:src=@mipmap/online
        android:background=@drawable/half_circle-->
    </FrameLayout>

    <LinearLayout
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_marginBottom="8sp"
        android:layout_marginTop="8sp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="15sp">

        <TextView
            android:id="@+id/item_broadcast_tv_channel_vehicle_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_family_regular"
            android:text="Demo Channel #"
            android:textColor="@color/black"
            android:textSize="17sp" />
        <!--android:text="@string/vehicle_name"-->

        <TextView
            android:id="@+id/item_broadcast_tv_channel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_family_light"
            android:text="Jery Stone"
            android:textColor="@color/black"
            android:textSize="17sp" />
        <!--android:text="@string/type"-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_broadcast_tv_vehicle_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_family_light"
                android:text="Car"
                android:textColor="@color/black"
                android:textSize="15sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_family_light"
                android:text=" - "
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/item_broadcast_tv_vehicle_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_family_light"
                android:text="Personal"
                android:textColor="@color/black"
                android:textSize="15sp" />


            <!--android:text="@string/owner"
            android:textColor="@color/bottom"-->
        </LinearLayout>

        <TextView
            android:id="@+id/item_broadcast_tv_channel_mobile_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_family_light"
            android:text="1234567890"
            android:textColor="@color/black"
            android:textSize="15sp" />
        <!--android:text="@string/category"
        android:textColor="@color/bottom"-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_broadcast_tv_vehicle_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_family_light"
                android:text="Bhopal"
                android:textColor="@color/black"
                android:textSize="15sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_family_light"
                android:text=" - "
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/item_broadcast_tv_channel_vehicle_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_family_light"
                android:text="MP04 "
                android:textColor="@color/black"
                android:textSize="15sp" />

            <!--android:text="@string/owner"
            android:textColor="@color/bottom"-->
        </LinearLayout>


        <!--android:text="@string/vehicle_no1"
        android:textColor="@color/bottom"-->


        <!-- <TextView
             android:id="@+id/category"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:fontFamily="@string/font_family_light"
             android:text="1234567890"
             android:textSize="18sp"
             android:textColor="@color/black" />-->
        <!-- android:text="@string/mobile_no1"
        android:textColor="@color/bottom"-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_broadcast_iv_channel_broadcast"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:padding="1dp"
            android:src="@drawable/ic_broadcast"
            android:tint="@color/divider"

            />

        <ImageView
            android:id="@+id/item_broadcast_iv_channel_popup"
            android:layout_width="15dp"
            android:layout_height="20sp"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:background="@drawable/ic_dot_new"
            android:clickable="true"
            android:padding="1dp"

            />

    </LinearLayout>
</LinearLayout>