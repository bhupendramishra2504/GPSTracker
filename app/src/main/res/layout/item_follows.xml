<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="@dimen/activity_horizontal_margin">

    <FrameLayout

        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingRight="10dp"
        android:paddingTop="10sp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_follows_civ_car"
            android:layout_width="60sp"
            android:layout_height="60sp"

            />
        <!-- android:src="@drawable/ic_car"
         app:civ_fill_color="@color/colorPrimary"
        app:civ_border_overlay="true"
            app:civ_border_width="1sp"android:tint="#0288d1"
        app:civ_border_color="#0288d1"android:src="@mipmap/ic_car_white"-->

        <ImageView
            android:id="@+id/item_follows_iv_status"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_marginTop="42sp"
            android:layout_gravity="right"
            android:padding="2.5sp"
            android:background="@drawable/half_circle"

             />
        <!--android:src="@drawable/ic_tick"
        android:src=@mipmap/online
        android:background=@drawable/half_circle-->
    </FrameLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_marginTop="8sp"
        android:layout_marginBottom="8sp"
        android:orientation="vertical"
        android:paddingLeft="15sp"
        >

        <TextView
            android:id="@+id/item_follows_tv_subscriber_vehicle_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_family_regular"
            android:text="Demo Channel #"
            android:textColor="@color/black"
            android:textSize="17sp"
             />
        <!--android:text="@string/vehicle_name"-->

        <TextView
            android:id="@+id/item_follows_tv_subscriber_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_family_light"
            android:text="Jery Stone"
            android:textSize="17sp"
            android:textColor="@color/black"/>
        <!--android:text="@string/type"-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
           >
        <TextView
            android:id="@+id/item_follows_tv_vehicle_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_family_light"
            android:text="Car"
            android:textSize="15sp"
            android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_family_light"
                android:text=" - "
                android:textSize="15sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/item_follows_tv_vehicle_type"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_family_light"
                android:text="Personal"
                android:textSize="15sp"
                android:textColor="@color/black" />
        <!--android:text="@string/owner"
        android:textColor="@color/bottom"-->
        </LinearLayout>

        <TextView
            android:id="@+id/item_follows_tv_subscriber_mobile_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_family_light"
            android:text="1234567890"
            android:textSize="15sp"
            android:textColor="@color/black"/>
        <!--android:text="@string/category"
        android:textColor="@color/bottom"-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/item_follows_tv_vehicle_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_family_light"
                android:text="Bhopal"
                android:textSize="15sp"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_family_light"
                android:text=" - "
                android:textSize="15sp"
                android:textColor="@color/black" />


            <TextView
                android:id="@+id/item_follows_tv_subscriber_vehicle_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_family_light"
                android:text="MP04"
                android:textSize="15sp"
                android:textColor="@color/black" />
            <!--android:text="@string/owner"
            android:textColor="@color/bottom"-->
        </LinearLayout>



        <!--android:text="@string/vehicle_no1"
        android:textColor="@color/bottom"-->


       <!-- <TextView
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_family_light"
            android:text="1234567890"
            android:textSize="18sp"
            android:textColor="@color/black" />-->
        <!-- android:text="@string/mobile_no1"
        android:textColor="@color/bottom"-->

    </LinearLayout>

    <LinearLayout
        android:layout_weight="0.2"
        android:layout_width="0sp"
        android:layout_marginTop="18sp"
        android:layout_height="match_parent">

        <TextView
            android:layout_gravity="right"
            android:gravity="right"
            android:id="@+id/item_follows_tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_family_light"
            android:text="2m"
            android:textSize="15sp"
            android:textColor="@color/black" />

    </LinearLayout>
    </LinearLayout>